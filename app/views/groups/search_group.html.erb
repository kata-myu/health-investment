<div class="group-index-top"><%= link_to ">自分のグループ一覧へ", groups_path %></div>
<div><%= link_to ">グループをつくる", new_group_path %></div>
<div class="group-index-form">
  <div class="form-heading">グループに参加しましょう！</div>
  <%= search_form_for @p, url: search_group_groups_path do |f| %>
    <%= f.text_field :name_cont, placeholder: "グループ名..." %>
    <%= f.text_field :promotion_cont, placeholder: "キーワードを入力..." %>
    <%= f.submit "検索" %>
  <% end %>
</div>
<div class="group-index-wrapper">
  <% if @groups.present? %>
    <% @groups.each do |group| %>
      <div class="group-area">
        <div class="join-group-link"><i class="fas fa-sign-in-alt"></i><%= link_to "このグループに参加する", join_group_group_path(group.id), method: :post, class: "join-link" %></div>
        <div class="group-index-name"><%= group.name %></div> <span>メンバー数: <%= group.users.length %>人</span>
        <div class="group-index-promotion"><%= group.promotion %></div>
      </div>
    <% end %>
  <% else %>
    <div>該当するグループはありません。</div>
  <% end %>
</div>